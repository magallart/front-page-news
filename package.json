{
  "name": "front-page-news",
  "version": "0.0.0",
  "engines": {
    "node": ">=22 <23"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "ng lint",
    "rss:check": "node scripts/rss-health-check.mjs",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "commitlint": "commitlint --from=HEAD~1"
  },
  "private": true,
  "packageManager": "pnpm@10.28.1",
  "dependencies": {
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.0",
    "@angular/localize": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/router": "^21.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular-eslint/builder": "^21.0.0",
    "@angular-eslint/eslint-plugin": "^21.0.0",
    "@angular-eslint/eslint-plugin-template": "^21.0.0",
    "@angular-eslint/template-parser": "^21.0.0",
    "@angular/build": "^21.1.0",
    "@angular/cli": "^21.1.0",
    "@angular/compiler-cli": "^21.1.0",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "autoprefixer": "^10.4.23",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "lint-staged": "^15.4.3",
    "postcss": "^8.5.6",
    "prettier": "^3.5.2",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  },
  "lint-staged": {
    "*.{ts,tsx,js,cjs,mjs,html,css,scss,md,json}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,cjs,mjs,html}": [
      "eslint --fix"
    ]
  }
}
